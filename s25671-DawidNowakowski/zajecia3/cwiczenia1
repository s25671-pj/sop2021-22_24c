Ćwiczenie 1.2

#!/bin/bash

if [[ -e ./config.cfg ]]
  then
  ./config.cfg
elif [[ $# > 0 ]]
  then
  ./$1
else
  echo "Niestety błąd"
fi

// W przypadku podania argumentu po ./z3cw1 występuje komunikat "./z3cw1: line 8 ./$1: No such file directory" //

