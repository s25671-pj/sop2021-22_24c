Ćwiczenie 1.3

#!/bin/bash

X=$0
Y=${#Z}

if [[ ${X:(Y-2):2 = "sh" ]]
  then
    echo ${0}
  else
    mv $0 ${0}.sh
    echo ${0}.sh
fi

// Po sprawdzeniu chociażby komendą "ls" plik wyświetla się już z koncówą ".sh" //
