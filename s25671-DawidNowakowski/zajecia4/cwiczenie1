Cwiczenie 1.3

#include <iostream>
#include <cstdlib>

int main(int argc, char** argv){

  int H = atoi(argv[1]);
    for(int i = 0; i < H; i++){
      for(int j = 0; j < (H-i-1); j++){
        std::cout<<" ";
      }
      for(int k = 0; k < (i*2)+1; k++){
        if((k%3)==0){
          std::cout<<"@";
        }else{
          std::cout<<"*";
      }
      std::cout<<std::endl;
    }
    
return 0;
}
