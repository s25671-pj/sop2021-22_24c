Cwiczenie 1.1

#include <iostream>

int main()
{
  int X=0;
  int Y=0;
  std::cout<<"Podaj liczbe: ";
  std::cin>>X;
  std::cout<<"Podaj druga liczbe: ";
  std::cin>>Y;  
  int Z=X+Y;
  std::cout<<"suma liczb to: ";
  std::cout<<Z<<std::endl;
  return 0;
}

